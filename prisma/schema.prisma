generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Modelo para Login 
model Participante {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  even3Id      Int    @unique // id_attendees da Even3
  nome         String // name
  email        String @unique
  foto         String? // photo
  senha        String? // password
  
  @@map("participantes")
}

// Modelo para eventos 
model Palestra {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  even3Id     Int      @unique // id_session da Even3
  titulo      String   // title
  descricao   String?  // description
  tipo        String   // type 
  local       String?  // venue
  horarios    HorarioEmbed[] // aray para armazenar os dados de data e horario 
  
  // No Mongo, podemos salvar os palestrantes dentro da palestra (Array de objetos)
  palestrantes PalestranteEmbed[] 
  
  @@map("palestras")
}
type HorarioEmbed {
  id_time    Int?
  date_start String? 
  date_end   String?
}

// Isso não é uma tabela, é um tipo de dado dentro da Palestra (funciona no Mongo eu acho kkkk)
type PalestranteEmbed {
  even3Id   Int     // id_speaker
  nome      String  // name
  foto      String? // photo
  bio       String? // resume
}

// Modelo para registro de presença
model Presenca {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  participanteId  String   @db.ObjectId // ID do participante local
  palestraId      String   @db.ObjectId // ID da palestra local
  dataHora        DateTime @default(now()) // Quando marcou presença
  sincronizado    Boolean  @default(false) // Se já foi enviado para Even3
  
  @@map("presencas")
  @@unique([participanteId, palestraId]) // Um participante só pode marcar presença uma vez por palestra
}

model Quiz {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  titulo    String
  descricao String?
  liberado  Boolean @default(false)


  perguntas PerguntaEmbed[]
  tentativas Tentativa[]

  @@map("quizzes")
}

// Embedded types para perguntas e opcoes dentro do Quiz
type PerguntaEmbed {
  id     String
  texto  String
  pontos Int @default(10)
  opcoes OpcaoEmbed[]
}

type OpcaoEmbed {
  id       String
  texto    String
  eCorreta Boolean @default(false)
}

model Pontuacao {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  participanteId String   @db.ObjectId
  quizId         String?  @db.ObjectId
  pontos         Int

  @@map("pontuacoes")
  @@index([participanteId])
}

model Tentativa {
  id String   @id @default(auto()) @map("_id") @db.ObjectId
  pontosObtidos Int
  enviadoEm     DateTime @default(now())

  participanteId String   @db.ObjectId

  quizId    String   @db.ObjectId
  quiz      Quiz     @relation(fields: [quizId], references: [id])

  @@map("tentativas")
  @@unique([participanteId, quizId])
}